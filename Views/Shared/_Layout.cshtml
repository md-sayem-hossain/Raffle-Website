<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RaffleKings</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RaffleKing.styles.css" asp-append-version="true" />
    <link href="~/nicelabel/css/jqueryscripttop.css" rel="stylesheet" />
    <link href="~/nicelabel/css/jquery-nicelabel.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">



    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <style>
        .nav-link {
            text-transform: uppercase;
            font-size: 13px;
        }

            .nav-link .active {
                font-weight: 600;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Raffle" asp-action="Index" style="text-transform: uppercase;font-weight: 800;letter-spacing: 5px;">RaffleKings</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Raffle" asp-action="Index" style="font-weight: 600;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Raffle" asp-action="Winners">Winners</a>
                        </li>
                        @if (ViewContext.HttpContext.Session.GetString("UserShortCode") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Raffle" asp-action="Registration">Registration</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Raffle" asp-action="Login" style="background: #625252;
color: #fff !important;
font-size: 13px;
border-radius: 5px;">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Welcome @ViewContext.HttpContext.Session.GetString("UserShortCode") !
                                </a>
                                <style>
                                    .dropdown-menu li:hover {
                                        background: #f0f0f0;
                                    }
                                </style>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Raffle" asp-action="Profile">Profile</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Raffle" asp-action="MyTickets">My Tickets</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Raffle" asp-action="Logout">Logout</a>

                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="row row-cols-1 row-cols-sm-2 row-cols-md-5 py-5 my-5 border-top">
            <div class="col mb-3">
                <a class="navbar-brand" asp-area="" asp-controller="Raffle" asp-action="Index" style="text-transform: uppercase;font-weight: 800;letter-spacing: 5px;">RaffleKings</a>

                <p class="text-muted">© 2023</p>
            </div>

            <div class="col mb-4">
            </div>

            <div class="col mb-4">
                <h5>Section</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="@Url.Action("Index","Raffle")" class="nav-link p-0 text-muted">Home</a></li>
                    <li class="nav-item mb-2"><a href="@Url.Action("Winners","Raffle")" class="nav-link p-0 text-muted">Winners</a></li>
                </ul>
            </div>

            <div class="col mb-4">
                <h5>Section</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="@Url.Action("Login","Raffle")" class="nav-link p-0 text-muted">Login</a></li>
                    <li class="nav-item mb-2"><a href="@Url.Action("Registration","Raffle")" class="nav-link p-0 text-muted">Registration</a></li>
                </ul>
            </div>


        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/nicelabel/js/jquery.nicelabel.js"></script>



    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>
