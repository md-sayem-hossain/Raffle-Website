 
@{
}

<link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />


<div class="container my-5">
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-12 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-5 fw-bold" style="color: lack !important; text-align:center">Winners List</h1>
            <table id="example" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>SL No</th> 
                        <th>Raffle Name</th>
                        <th>Ticket No</th>
                        <th>Winner Name</th>
                        <th>Country</th>
                        <th>Drawn At</th> 
                    </tr>
                </thead>
                <tbody>
                    @{

                        if (ViewBag.winners != null)
                        {
                            var l = 1;
                            foreach (var v in ViewBag.winners)
                            {
                                <tr>
                                    <td>@l</td>
                                    <td>@v.RaffleName</td>
                                    <td>@v.TIcketNo</td>
                                    <td>@v.WinnerName</td>
                                    <td>@v.Country</td>
                                    <td>@v.DrawnAt.ToString("dd-MMM-yyyy")</td>
                                </tr>
                                l = l +1;
                            }
                           
                        }
                    }
                   
                </tbody>
                <tfoot>
                    <tr>
                        <th>SL No</th> 
                        <th>Raffle Name</th>
                        <th>Ticket No</th>
                        <th>Winner Name</th>
                        <th>Drawn At</th> 
                    </tr>
                </tfoot>
            </table>

             
        </div>
    </div>
</div>



