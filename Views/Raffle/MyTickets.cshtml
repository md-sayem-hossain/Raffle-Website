@{
    ViewData["Title"] = "MyTickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />


<div class="container my-5">
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-12 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-5 fw-bold" style="color: lack !important; text-align:center">My Tickets</h1>
            <table id="example" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>SL No</th>
                        <th>Raffle Name</th>
                        <th>Ticket No</th>
                        <th>Price</th>
                        @*<th>Will Drawn At</th>*@
                    </tr>
                </thead>
                <tbody>
                    @{

                        if (ViewBag.mytickets != null)
                        {
                            var l = 1;
                            foreach (var v in ViewBag.mytickets)
                            {
                                <tr>
                                    <td>@l</td>
                                    <td>@v.Raffle_Name</td>
                                    <td>@v.Ticket_No</td>
                                    <td>@v.Price</td>
                                </tr>
                                l = l + 1;
                            }

                        }
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>SL No</th>
                        <th>Raffle Name</th>
                        <th>Ticket No</th>
                        <th>Price</th>
                        @*<th>Will Drawn At</th>*@
                    </tr>
                </tfoot>
            </table>


        </div>
    </div>
</div>